  <div class="container-fluid bg-light shadow-sm ">
    <p class="h1">Popular</p> <br> 
<div class="row">
  <% @all_products.each do |product| %>
   <% if product.popularity > 5 %>
  <div class="col-sm-3">
    <div class="card">
      <img src=<%= product.image %>  alt="..." class="card-img-top" >
      <div class="card-body">
        <h5 class="card-title text-center"><%= product.name %></h5>
        <p class="card-text text-center"> $<%= number_with_precision(product.price, :precision => 2) %></p>
        <!--<center> <a href="#" class="btn btn-primary text-center text-white">Save</a> </center>-->
        <% if session[:cart].include? product.id.to_s %>
        <center> <%= link_to 'Remove from Cart', edit_cart_path(product), class:"btn btn-primary btn-sm text-white" %></center>
        <% else %>
        <center><%= link_to 'Add to Cart', edit_cart_path(product), class:"btn btn-primary btn-sm text-white" %></center>
        <% end %>
      </div>
    </div>
  </div>
      <% end %>
      <% end %>
