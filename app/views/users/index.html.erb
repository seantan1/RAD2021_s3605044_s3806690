<h1>Users</h1>

<table class="table table-hover">
<thead>
    <tr>
    <th>Username</th>
    <th>Email</th>
    <th>User id</th>
    <th>Password</th>
    <th colspan="1"></th>
    </tr>
</thead>

<tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.id %></td>
            <td><%= user.password_digest %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
    <% end %>
</tbody>
</table>
<br>