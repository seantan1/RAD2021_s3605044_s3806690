<h1>Register</h1>
<%= form_for @user do |f| %>
 <%= f.label :email %>
 <%= f.text_field :email %><br/>
 <%= f.label :password %>
 <%= f.password_field :password %><br/>
 <%= f.label :password_confirmation %>
 <%= f.password_field :password_confirmation%><br/>
 <%=f.submit "Sign Up"%>
<% end %>

<h1>Users</h1>

<table class="table table-hover">
<thead>
    <tr>
    <th>Name</th>
    <th>Email</th>
    <th>User id</th>
    <th colspan="1"></th>
    </tr>
</thead>

<tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.id %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
    <% end %>
</tbody>
</table>
<br>