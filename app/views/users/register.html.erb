
<div class="position-absolute top-50 start-50 translate-middle"> 
<h1>Register</h1>
<%= form_for @user do |f| %>
  <%= f.label :name, :class =>"col-sm-5 col-form-label" %>
 <%= f.text_field :name %><br/>
 <%= f.label :email, :class =>"col-sm-5 col-form-label" %>
 <%= f.text_field :email %><br/>
 <%= f.label :password, :class =>"col-sm-5 col-form-label"%>
 <%= f.password_field :password %><br/>
 <%= f.label :password_confirmation, :class =>"col-sm-5 col-form-label" %>
 <%= f.password_field :password_confirmation%><br/>
   <div class="row mb-5">
    <div class="col-sm-10 offset-sm-5">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck1">
        <label class="form-check-label" for="gridCheck1">
          Terms And Conditions
        </label>
      </div>
    </div>
  </div>
 <%=f.submit "Sign Up", :class => "btn btn-secondary"%>
<% end %>
 </div>