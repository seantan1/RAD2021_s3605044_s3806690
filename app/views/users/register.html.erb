<div class="margin-top text-center">
    <h1>Register Form</h1>
    <h3 class="fw-lighter">Create your account, it's free and only takes a minute</h3>
</div>

<div class="container mx-auto "> <br>
 <%= form_for @user do |f| %>
 
    <div class="container form-control-sm col-md-3 mx-auto"> 
     <%= f.label 'Username', :class =>"col-sm-5 col-form-label" %>
     <%= f.text_field :name %><br/>
     <%= f.label :email, :class =>"col-sm-5 col-form-label" %>
     <%= f.text_field :email %><br/>
     <%= f.label :password, :class =>"col-sm-5 col-form-label"%>
     <%= f.password_field :password %><br/>
     <%= f.label :password_confirmation, :class =>"col-sm-5 col-form-label" %>
     <%= f.password_field :password_confirmation%><br/>
   <div class="row mb-5 float-end">
    <!--<div class="col-sm-10 offset-sm-5">-->
      
      <div class="container text-end"> 
        <%= f.check_box :tos, class:"form-check-input" %> 
        <%= label_tag "Terms & Conditions" %>
      </div>
      
    <!--</div>-->
  </div>
 <%=f.submit "Sign Up", :class => "btn btn-secondary"%>
<% end %>
</div>
 
 </div>
 
 
<hr></hr>

<div class="container">
    <center ><%= link_to "Already A User?", login_path, class:"nav-link" %></center>
</div>
 