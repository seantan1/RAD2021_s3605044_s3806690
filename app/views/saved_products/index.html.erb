<p id="notice"><%= notice %></p>

<h1>Saved Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_products.each do |saved_product| %>
      <tr>
        <td><%= saved_product.product_id %></td>
        <td><%= saved_product.count %></td>
        <td><%= link_to 'Show', saved_product %></td>
        <td><%= link_to 'Edit', edit_saved_product_path(saved_product) %></td>
        <td><%= link_to 'Destroy', saved_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saved Product', new_saved_product_path %>
