<!--FOR ADMIN PAGE-->
<div class="container"> 
<p id="notice"><%= notice %></p>

<h3 class="text-center display-6">Customer's Saved List Statistics</h3>

<table class="table table-hover text-center table-dark">
  <thead>
    <tr>
      <th class=>Product Name</th>
      <th>Image</th>
      <th>Popularity</th>
      <th>Customers Saved</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<br>

  <tbody>
    <% @saved_products.each do |saved_product| %>
      <% if product = get_product_by_id(saved_product.product_id) %>
        <tr>
          <td><%= link_to product.name, product, class:"text-white" %></td>
          <td>
          <%= link_to product do %>    
              <img src=<%= product_first_image(product) %> width="100" class="img-thumbnail">
          <% end %>    
          </td>
          <td><%= product.popularity %></td>
          <td><%= saved_product.count %></td>
          <!--<td><%#= link_to 'Show', saved_product %></td>-->
          <td><%#= link_to 'Edit', edit_saved_product_path(saved_product) %></td>
          <td><%#= link_to 'Destroy', saved_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%#= link_to 'New Saved Product', new_saved_product_path %>
