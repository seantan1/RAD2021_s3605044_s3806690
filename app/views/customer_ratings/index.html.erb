<p id="notice"><%= notice %></p>

<h1 class="text-center">Customer Ratings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_ratings.each do |customer_rating| %>
      <tr>
        <td><%= customer_rating.user_id %></td>
        <td><%= customer_rating.rating %></td>
        <td><%= link_to 'Show', customer_rating %></td>
        <td><%= link_to 'Edit', edit_customer_rating_path(customer_rating) %></td>
        <td><%= link_to 'Destroy', customer_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer Rating', new_customer_rating_path %>
